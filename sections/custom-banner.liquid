{% schema %}
{
  "name": "Custom Hero Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "Text Settings"
    },
    {
      "type": "text",
      "id": "top_heading",
      "label": "Top Left Heading",
      "default": "no power?"
    },
    {
      "type": "text",
      "id": "bottom_heading",
      "label": "Bottom Right Heading",
      "default": "no worries."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Sleek, reliable, and fast.\nWeâ€™ve got your back."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "paragraph",
      "content": "This section now uses the Chillax Variable font uploaded to your Assets folder."
    },
    {
      "type": "range",
      "id": "heading_scale",
      "min": 0.5,
      "max": 2.0,
      "step": 0.1,
      "label": "Heading Scale",
      "default": 1.0
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description Size",
      "default": 18
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "shop all"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 400,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "label": "Desktop Height",
      "default": 700
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 300,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Mobile Height",
      "default": 500
    }
  ],
  "presets": [
    {
      "name": "Custom Hero Banner"
    }
  ]
}
{% endschema %}

{% style %}
    /* 1. LOAD CUSTOM FONT (Chillax) */
    /* We check if the file exists in assets to prevent errors */
    @font-face {
    font-family: 'Chillax-Custom';
    src: url({{ 'Chillax-Variable.woff2' | asset_url }}) format('woff2');
    font-weight: 100 900; /* Supports variable weights */
    font-display: swap;
    }

    .custom-hero-{{ section.id }} {
    position: relative;
    width: 100%;
    height: {{ section.settings.section_height }}px;
    overflow: hidden;
    display: block;
    }

    .custom-hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
    }

    .custom-hero-text {
    position: absolute;
    color: {{ section.settings.text_color }};
    line-height: 1.1;
    z-index: 2;
    /* Apply Chillax Font */
    font-family: 'Chillax-Custom', sans-serif;
    }

    /* Headings */
    .hero-top-heading {
    top: 8%;
    left: 5%;
    font-size: calc(clamp(3rem, 6vw, 8rem) * {{ section.settings.heading_scale }});
    font-weight: 600; /* Adjust this (200-700) to change thickness */
    }

    .hero-bottom-heading {
    bottom: 5%;
    right: 5%;
    font-size: calc(clamp(3rem, 6vw, 8rem) * {{ section.settings.heading_scale }});
    font-weight: 600;
    text-align: right;
    }

    /* Description & Button Group */
    .hero-bottom-left-group {
    position: absolute;
    bottom: 8%;
    left: 5%;
    max-width: 400px;
    z-index: 2;
    font-family: 'Chillax-Custom', sans-serif;
    }

    .hero-description {
    color: {{ section.settings.text_color }};
    /* We use the standard theme font for body text to ensure readability */
    font-family: var(--font-body-family);
    font-size: {{ section.settings.description_size }}px;
    margin-bottom: 1.5rem;
    line-height: 1.4;
    }

    .hero-custom-btn {
    display: inline-block;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text }};
    padding: 12px 32px;
    border-radius: 50px;
    text-decoration: none;
    /* You can change this to 'Chillax-Custom' if you want the button to match */
    font-family: var(--font-heading-family);
    font-weight: 600;
    font-size: 1rem;
    transition: opacity 0.3s ease;
    border: none;
    cursor: pointer;
    }

    .hero-custom-btn:hover {
    opacity: 0.85;
    }

    @media screen and (max-width: 768px) {
    .custom-hero-{{ section.id }} {
    height: {{ section.settings.mobile_height }}px;
    }

    .hero-top-heading {
    top: 5%;
    left: 5%;
    }

    .hero-bottom-heading {
    bottom: 5%;
    right: 5%;
    }

    .hero-bottom-left-group {
    bottom: 15%;
    left: 5%;
    max-width: 70%;
    }
    }
{% endstyle %}

<div class="custom-hero-{{ section.id }}">
    {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'custom-hero-bg', alt: section.settings.image.alt }}
    {%- else -%}
        <div class="custom-hero-bg" style="background-color: #ccc;"></div>
    {%- endif -%}

    {%- if section.settings.top_heading != blank -%}
        <div class="custom-hero-text hero-top-heading">
            {{ section.settings.top_heading }}
        </div>
    {%- endif -%}

    <div class="hero-bottom-left-group">
        {%- if section.settings.description != blank -%}
            <div class="hero-description">
                {{ section.settings.description | newline_to_br }}
            </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link }}" class="hero-custom-btn">
                {{ section.settings.button_label }}
            </a>
        {%- endif -%}
    </div>

    {%- if section.settings.bottom_heading != blank -%}
        <div class="custom-hero-text hero-bottom-heading">
            {{ section.settings.bottom_heading }}
        </div>
    {%- endif -%}
</div>