{% schema %}
{
  "name": "Custom Hero Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "Text Settings"
    },
    {
      "type": "text",
      "id": "top_heading",
      "label": "Top Left Heading",
      "default": "no power?"
    },
    {
      "type": "text",
      "id": "bottom_heading",
      "label": "Bottom Right Heading",
      "default": "no worries."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Sleek, reliable, and fast.\nWeâ€™ve got your back."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "shop all"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 400,
      "max": 1000,
      "step": 10,
      "unit": "px",
      "label": "Desktop Height",
      "default": 700
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 300,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Mobile Height",
      "default": 500
    }
  ],
  "presets": [
    {
      "name": "Custom Hero Banner"
    }
  ]
}
{% endschema %}

{% style %}
    .custom-hero-{{ section.id }} {
    position: relative;
    width: 100%;
    height: {{ section.settings.section_height }}px;
    overflow: hidden;
    display: block;
    }

    /* Background Image Handling */
    .custom-hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
    }

    /* Text General Styles */
    .custom-hero-text {
    position: absolute;
    color: {{ section.settings.text_color }};
    font-family: var(--font-heading-family); /* Uses your theme's heading font */
    line-height: 1.1;
    z-index: 2;
    }

    /* Top Left Heading */
    .hero-top-heading {
    top: 8%;
    left: 5%;
    font-weight: 700;
    font-size: clamp(3rem, 6vw, 8rem); /* Responsive sizing */
    }

    /* Bottom Right Heading */
    .hero-bottom-heading {
    bottom: 5%;
    right: 5%;
    font-weight: 700;
    font-size: clamp(3rem, 6vw, 8rem); /* Responsive sizing */
    text-align: right;
    }

    /* Bottom Left Group (Desc + Button) */
    .hero-bottom-left-group {
    position: absolute;
    bottom: 8%;
    left: 5%;
    max-width: 400px;
    z-index: 2;
    }

    .hero-description {
    color: {{ section.settings.text_color }};
    font-family: var(--font-body-family);
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    line-height: 1.4;
    }

    /* Button Styling */
    .hero-custom-btn {
    display: inline-block;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text }};
    padding: 12px 32px;
    border-radius: 50px; /* Pill shape */
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: opacity 0.3s ease;
    border: none;
    cursor: pointer;
    }

    .hero-custom-btn:hover {
    opacity: 0.85;
    }

    /* Mobile Adjustments */
    @media screen and (max-width: 768px) {
    .custom-hero-{{ section.id }} {
    height: {{ section.settings.mobile_height }}px;
    }

    .hero-top-heading {
    top: 5%;
    left: 5%;
    }

    .hero-bottom-heading {
    bottom: 5%;
    right: 5%;
    }

    .hero-bottom-left-group {
    bottom: 15%; /* Push up slightly to avoid hitting the bottom text */
    left: 5%;
    max-width: 70%;
    }
    }
{% endstyle %}

<div class="custom-hero-{{ section.id }}">
    {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'custom-hero-bg', alt: section.settings.image.alt }}
    {%- else -%}
        <div class="custom-hero-bg" style="background-color: #ccc;"></div>
    {%- endif -%}

    {%- if section.settings.top_heading != blank -%}
        <div class="custom-hero-text hero-top-heading">
            {{ section.settings.top_heading }}
        </div>
    {%- endif -%}

    <div class="hero-bottom-left-group">
        {%- if section.settings.description != blank -%}
            <div class="hero-description">
                {{ section.settings.description | newline_to_br }}
            </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link }}" class="hero-custom-btn">
                {{ section.settings.button_label }}
            </a>
        {%- endif -%}
    </div>

    {%- if section.settings.bottom_heading != blank -%}
        <div class="custom-hero-text hero-bottom-heading">
            {{ section.settings.bottom_heading }}
        </div>
    {%- endif -%}
</div>