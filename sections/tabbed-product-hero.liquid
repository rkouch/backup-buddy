{% schema %}
{
  "name": "Tabbed Product Hero",
  "tag": "section",
  "class": "section-tabbed-hero",
  "settings": [
    {
      "type": "header",
      "content": "Background & Card Settings"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Main Background Image",
      "info": "The blurred background behind the glass card."
    },
    {
      "type": "range",
      "id": "glass_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Glass Card Opacity",
      "default": 10,
      "info": "Adjust transparency of the overlay card."
    },
    {
      "type": "range",
      "id": "glass_blur",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Background Blur Amount",
      "default": 20
    },
    {
      "type": "text",
      "id": "card_title",
      "label": "Card Top Left Title",
      "default": "choose your buddy"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Tab Highlight Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_text",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 500,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Section Height (Desktop)",
      "default": 700
    }
  ],
  "blocks": [
    {
      "type": "tab_content",
      "name": "Product Tab",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "tab_label",
          "label": "Tab Nav Label",
          "default": "Option"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "Product Title",
          "default": "AirBuddy"
        },
        {
          "type": "textarea",
          "id": "product_description",
          "label": "Short Description",
          "default": "short sentence about the product"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "shop now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Product Link"
        },
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tabbed Product Hero",
      "blocks": [
        {
          "type": "tab_content",
          "settings": {
            "tab_label": "strong",
            "product_title": "AirBuddy Strong"
          }
        },
        {
          "type": "tab_content",
          "settings": {
            "tab_label": "slim",
            "product_title": "AirBuddy Slim"
          }
        },
        {
          "type": "tab_content",
          "settings": {
            "tab_label": "cool",
            "product_title": "AirBuddy Cool"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% style %}
    .tabbed-hero-{{ section.id }} {
    position: relative;
    width: 100%;
    height: {{ section.settings.section_height }}px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.text_color }};
    }

    /* 1. Background Image Layer */
    .hero-bg-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    }
    .hero-bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    }
    .hero-bg-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #ff00cc, #333399); /* Fallback gradient */
    }


    /* 2. Glassmorphism Card */
    .glass-card {
    position: relative;
    z-index: 1;
    width: 90%;
    max-width: 1100px;
    /* The Glass Effect */
    background: rgba(255, 255, 255, {{ section.settings.glass_opacity | divided_by: 100.0 }});
    backdrop-filter: blur({{ section.settings.glass_blur }}px);
    -webkit-backdrop-filter: blur({{ section.settings.glass_blur }}px);
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
    padding: 40px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    }

    /* 3. Card Header & Tabs */
    .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 60px;
    font-family: var(--font-heading-family);
    font-weight: 600;
    }

    .tab-navigation {
    display: flex;
    gap: 30px;
    }

    .tab-btn {
    background: none;
    border: none;
    color: {{ section.settings.text_color }};
    opacity: 0.6;
    font-family: var(--font-heading-family);
    font-size: 1.1rem;
    cursor: pointer;
    padding-bottom: 5px;
    position: relative;
    transition: opacity 0.3s;
    }

    .tab-btn:hover {
    opacity: 1;
    }

    /* Active Tab State (Underline) */
    .tab-btn.active {
    opacity: 1;
    }
    .tab-btn.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: {{ section.settings.accent_color }};
    }


    /* 4. Tab Content Panels */
    .tab-panel {
    display: none; /* Hidden by default */
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
    animation: fadeIn 0.5s ease;
    }

    /* Only show the active panel */
    .tab-panel.active {
    display: flex;
    }

    @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
    }

    .panel-text-col {
    flex: 1;
    max-width: 50%;
    }

    .panel-image-col {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    }

    /* Typography & Button */
    .product-hero-title {
    font-size: clamp(3rem, 5vw, 5rem);
    font-weight: 700;
    margin-bottom: 20px;
    font-family: var(--font-heading-family);
    line-height: 1.1;
    }

    .product-hero-desc {
    font-size: 1.2rem;
    margin-bottom: 40px;
    opacity: 0.9;
    }

    .hero-shop-btn {
    display: inline-block;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text }};
    padding: 14px 40px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: opacity 0.3s;
    }
    .hero-shop-btn:hover {
    opacity: 0.8;
    }

    .product-img-wrapper img {
    width: 100%;
    height: auto;
    max-height: 500px;
    object-fit: contain;
    /* Slight tilt/perspective effect like image_2.png */
    transform: perspective(1000px) rotateY(-15deg) rotateX(5deg);
    filter: drop-shadow(0px 10px 20px rgba(0,0,0,0.3));
    }


    /* Mobile Responsive */
    @media screen and (max-width: 768px) {
    .tabbed-hero-{{ section.id }} {
    height: auto;
    min-height: 700px;
    padding: 20px 0;
    }
    .card-header {
    flex-direction: column;
    gap: 20px;
    align-items: flex-start;
    margin-bottom: 30px;
    }
    .tab-panel.active {
    flex-direction: column-reverse;
    gap: 30px;
    }
    .panel-text-col, .panel-image-col {
    max-width: 100%;
    }
    .product-img-wrapper img {
    max-height: 300px;
    /* Less tilt on mobile */
    transform: perspective(1000px) rotateY(-5deg) rotateX(2deg);
    }
    }
{% endstyle %}


<div class="tabbed-hero-{{ section.id }}" data-section-id="{{ section.id }}">

    <div class="hero-bg-layer">
        {% if section.settings.bg_image != blank %}
            {{ section.settings.bg_image | image_url: width: 2000 | image_tag: class: 'hero-bg-img', loading: 'lazy' }}
        {% else %}
            <div class="hero-bg-placeholder"></div>
        {% endif %}
    </div>

    <div class="glass-card">

        <div class="card-header">
            <span class="card-title-text">{{ section.settings.card_title }}</span>
            <div class="tab-navigation" role="tablist">
                {%- for block in section.blocks -%}
                    <button
                            class="tab-btn {% if forloop.first %}active{% endif %}"
                            role="tab"
                            aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
                            aria-controls="panel-{{ block.id }}"
                            data-block-id="{{ block.id }}"
                            {{ block.shopify_attributes }}
                    >
                        {{ block.settings.tab_label }}
                    </button>
                {%- endfor -%}
            </div>
        </div>

        <div class="tab-contents-container">
            {%- for block in section.blocks -%}
                <div
                        id="panel-{{ block.id }}"
                        class="tab-panel {% if forloop.first %}active{% endif %}"
                        role="tabpanel"
                        data-block-id="{{ block.id }}"
                >

                    <div class="panel-text-col">
                        <h2 class="product-hero-title">{{ block.settings.product_title }}</h2>
                        {% if block.settings.product_description != blank %}
                            <p class="product-hero-desc">{{ block.settings.product_description }}</p>
                        {% endif %}

                        <a href="{{ block.settings.button_link | default: '#' }}" class="hero-shop-btn">
                            {{ block.settings.button_label }}
                        </a>
                    </div>

                    <div class="panel-image-col">
                        <div class="product-img-wrapper">
                            {% if block.settings.product_image != blank %}
                                {{ block.settings.product_image | image_url: width: 1000 | image_tag: loading: 'lazy' }}
                            {% else %}
                                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                            {% endif %}
                        </div>
                    </div>

                </div>
            {%- endfor -%}
        </div>

    </div>
</div>

<script>
    // Wait for DOM to load
    document.addEventListener("DOMContentLoaded", function() {
        initTabbedHero('{{ section.id }}');
    });

    // Initialize when section is reloaded in Theme Editor
    if (Shopify.designMode) {
        document.addEventListener('shopify:section:load', function(event) {
            if (event.detail.sectionId === '{{ section.id }}') {
                initTabbedHero('{{ section.id }}');
            }
        });
        // Handle block selection in editor
        document.addEventListener('shopify:block:select', function(event) {
            const blockId = event.detail.blockId;
            const sectionId = event.detail.sectionId;
            if(sectionId !== '{{ section.id }}') return;
            activateTab(sectionId, blockId);
        });
    }

    function initTabbedHero(sectionId) {
        const container = document.querySelector(`.tabbed-hero-${sectionId}`);
        if (!container) return;

        const tabBtns = container.querySelectorAll('.tab-btn');

        tabBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const targetBlockId = this.getAttribute('data-block-id');
                activateTab(sectionId, targetBlockId);
            });
        });
    }

    function activateTab(sectionId, blockId) {
        const container = document.querySelector(`.tabbed-hero-${sectionId}`);
        if(!container) return;

        const tabBtns = container.querySelectorAll('.tab-btn');
        const panels = container.querySelectorAll('.tab-panel');

        // 1. Deactivate all
        tabBtns.forEach(b => {
            b.classList.remove('active');
            b.setAttribute('aria-selected', 'false');
        });
        panels.forEach(p => p.classList.remove('active'));

        // 2. Activate target
        const activeBtn = container.querySelector(`.tab-btn[data-block-id="${blockId}"]`);
        const activePanel = container.querySelector(`.tab-panel[data-block-id="${blockId}"]`);

        if (activeBtn && activePanel) {
            activeBtn.classList.add('active');
            activeBtn.setAttribute('aria-selected', 'true');
            activePanel.classList.add('active');
        }
    }
</script>