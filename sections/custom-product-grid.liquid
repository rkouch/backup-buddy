{% schema %}
{
  "name": "Custom Product Grid",
  "tag": "section",
  "class": "section-custom-products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "our products."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection",
      "info": "Select a collection to display the first 3 products."
    },
    {
      "type": "header",
      "content": "Card Styling"
    },
    {
      "type": "color",
      "id": "card_bg",
      "label": "Card Background",
      "default": "#F2F2F2"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Button Styling"
    },
    {
      "type": "color",
      "id": "btn_view_bg",
      "label": "'View' Button Background",
      "default": "#8e8e8e"
    },
    {
      "type": "color",
      "id": "btn_add_bg",
      "label": "'Add' Button Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 30,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Heading Size",
      "default": 64
    }
  ],
  "presets": [
    {
      "name": "Custom Product Grid"
    }
  ]
}
{% endschema %}

{% style %}
    @font-face {
    font-family: 'Chillax-Custom';
    src: url({{ 'Chillax-Variable.woff2' | asset_url }}) format('woff2');
    font-weight: 100 900;
    font-display: swap;
    }

    .cp-section-{{ section.id }} {
    /* UPDATED: Wider container and fixed side padding */
    max-width: 1500px;
    padding: 60px 40px;
    margin: 0 auto;
    }

    .cp-heading {
    font-family: var(--font-heading-family);
    font-weight: 800;
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.text_color }};
    margin-bottom: 40px;
    line-height: 1;
    /* Ensure heading aligns with grid */
    padding-left: 0;
    }

    /* Grid Layout */
    .cp-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px; /* Reduced gap slightly for a tighter look */
    }

    /* Card Styling */
    .cp-card {
    background-color: {{ section.settings.card_bg }};
    border-radius: 24px;
    padding: 30px;
    display: flex;
    flex-direction: column;
    position: relative;
    min-height: 450px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    transition: transform 0.3s ease;
    }

    .cp-card:hover {
    transform: translateY(-5px);
    }

    .cp-info-top {
    margin-bottom: 20px;
    }

    .cp-title {
    font-family: var(--font-heading-family);
    font-weight: 700;
    font-size: 1.5rem;
    color: {{ section.settings.text_color }};
    margin: 0 0 5px 0;
    }

    .cp-price {
    font-size: 1.2rem;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    font-weight: 400;
    margin: 0;
    }

    /* Swatches */
    .cp-swatch-container {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: 10px;
    margin-bottom: 20px;
    }

    .cp-swatch {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 1px solid rgba(0,0,0,0.1);
    display: inline-block;
    }

    .cp-spacer { flex-grow: 1; }

    /* Button Group */
    .cp-btn-group {
    display: flex;
    gap: 15px;
    margin-top: auto;
    }

    .cp-btn {
    flex: 1;
    padding: 14px 0;
    border-radius: 12px;
    text-align: center;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border: none;
    cursor: pointer;
    transition: opacity 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    }

    .cp-btn:hover { opacity: 0.85; }

    .cp-btn-view {
    background-color: {{ section.settings.btn_view_bg }};
    color: {{ section.settings.btn_text_color }};
    }

    .cp-btn-add {
    background-color: {{ section.settings.btn_add_bg }};
    color: {{ section.settings.btn_text_color }};
    }

    @media screen and (max-width: 900px) {
    .cp-section-{{ section.id }} {
    padding: 40px 20px; /* Smaller padding on mobile */
    }
    .cp-grid {
    grid-template-columns: 1fr;
    }
    .cp-heading {
    font-size: calc({{ section.settings.heading_size }}px * 0.7);
    }
    }
{% endstyle %}

<div class="cp-section-{{ section.id }}">
    <h2 class="cp-heading">{{ section.settings.heading }}</h2>

    <div class="cp-grid">
        {%- assign collection = section.settings.collection -%}

        {%- if collection != blank -%}
            {%- for product in collection.products limit: 3 -%}
                <div class="cp-card">

                    <div class="cp-info-top">
                        <h3 class="cp-title">{{ product.title }}</h3>
                        <p class="cp-price">{{ product.price | money }}</p>

                        {%- for option in product.options_with_values -%}
                            {%- if option.name == 'Color' or option.name == 'Colour' -%}
                                <div class="cp-swatch-container">
                                    {%- for value in option.values limit: 3 -%}
                                        <span class="cp-swatch" style="background-color: {{ value | split: ' ' | last | downcase }};"></span>
                                    {%- endfor -%}
                                </div>
                            {%- endif -%}
                        {%- endfor -%}
                    </div>

                    <div class="cp-spacer"></div>

                    <div class="cp-btn-group">
                        <a href="{{ product.url }}" class="cp-btn cp-btn-view">view</a>

                        {% form 'product', product %}
                            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                            <button type="submit" class="cp-btn cp-btn-add">add to bag</button>
                        {% endform %}
                    </div>
                </div>
            {%- endfor -%}

        {%- else -%}
            {% for i in (1..3) %}
                <div class="cp-card">
                    <div class="cp-info-top">
                        <h3 class="cp-title">Product {{ i }}</h3>
                        <p class="cp-price">$89.95</p>
                        <div class="cp-swatch-container">
                            <span class="cp-swatch" style="background-color: #e08e8e;"></span>
                            <span class="cp-swatch" style="background-color: #96b596;"></span>
                            <span class="cp-swatch" style="background-color: #3b5391;"></span>
                        </div>
                    </div>
                    <div class="cp-spacer"></div>
                    <div class="cp-btn-group">
                        <span class="cp-btn cp-btn-view">view</span>
                        <span class="cp-btn cp-btn-add">add to bag</span>
                    </div>
                </div>
            {% endfor %}
        {%- endif -%}
    </div>
</div>