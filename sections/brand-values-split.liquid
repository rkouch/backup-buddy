{% comment %}
  Brand values split section
  Left: editable text
  Right: editable image
{% endcomment %}

<section id="brand-values-{{ section.id }}" class="brand-values brand-values-{{ section.id }}">
  <div class="brand-values__inner">
    <div class="brand-values__left">
      {% if section.settings.kicker != blank %}
        <p class="brand-values__kicker">{{ section.settings.kicker }}</p>
      {% endif %}

      <h2 class="brand-values__heading">
        {% if section.settings.heading_line_1 != blank %}
          <span>{{ section.settings.heading_line_1 }}</span>
        {% endif %}
        {% if section.settings.heading_line_2 != blank %}
          <span>{{ section.settings.heading_line_2 }}</span>
        {% endif %}
        {% if section.settings.heading_line_3 != blank %}
          <span>{{ section.settings.heading_line_3 }}</span>
        {% endif %}
      </h2>

      {% if section.settings.body_text != blank %}
        <p class="brand-values__body">
          {{ section.settings.body_text }}
        </p>
      {% endif %}
    </div>

    <div class="brand-values__right">
      {% if section.settings.image != blank %}
        <div class="brand-values__image-wrap">
          {{ section.settings.image 
            | image_url: width: 1600 
            | image_tag: loading: 'lazy', class: 'brand-values__image' 
          }}
        </div>
      {% else %}
        <div class="brand-values__image-placeholder">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% style %}
  .brand-values-{{ section.id }} {
    --brand-values-underline: {{ section.settings.underline_color }};
    --brand-values-bg-right: {{ section.settings.right_bg_color }};
  }

  .brand-values-{{ section.id }} {
    padding: 3rem 0;
  }

  .brand-values-{{ section.id }} .brand-values__inner {
    display: flex;
    min-height: 260px;
  }

  .brand-values-{{ section.id }} .brand-values__left,
  .brand-values-{{ section.id }} .brand-values__right {
    width: 50%;
  }

  .brand-values-{{ section.id }} .brand-values__left {
    background: #ffffff;
    padding: 3rem 2.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .brand-values-{{ section.id }} .brand-values__right {
    background: var(--brand-values-bg-right);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-values-{{ section.id }} .brand-values__kicker {
    font-size: 0.8rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin: 0 0 0.75rem;
  }

  .brand-values-{{ section.id }} .brand-values__heading {
    font-size: 2rem;
    line-height: 1.2;
    margin: 0 0 1.5rem;
  }

  .brand-values-{{ section.id }} .brand-values__heading span {
    display: inline-block;
    border-bottom: 3px solid var(--brand-values-underline);
  }

  .brand-values-{{ section.id }} .brand-values__body {
    font-size: 0.95rem;
    max-width: 25rem;
    margin: 0;
  }

  .brand-values-{{ section.id }} .brand-values__image-wrap,
  .brand-values-{{ section.id }} .brand-values__image-placeholder {
    width: 100%;
    height: 100%;
  }

  .brand-values-{{ section.id }} .brand-values__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Mobile */
  @media screen and (max-width: 749px) {
    .brand-values-{{ section.id }} .brand-values__inner {
      flex-direction: column;
    }

    .brand-values-{{ section.id }} .brand-values__left,
    .brand-values-{{ section.id }} .brand-values__right {
      width: 100%;
    }

    .brand-values-{{ section.id }} .brand-values__left {
      padding: 2.5rem 1.75rem;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Brand values split",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Small label",
      "default": "our"
    },
    {
      "type": "text",
      "id": "heading_line_1",
      "label": "Heading line 1",
      "default": "our"
    },
    {
      "type": "text",
      "id": "heading_line_2",
      "label": "Heading line 2",
      "default": "brand"
    },
    {
      "type": "text",
      "id": "heading_line_3",
      "label": "Heading line 3",
      "default": "values."
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body text",
      "default": "Our brand values etc. what we stand for / our story / inspo"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right side image"
    },
    {
      "type": "color",
      "id": "underline_color",
      "label": "Underline colour",
      "default": "#1e90ff"
    },
    {
      "type": "color",
      "id": "right_bg_color",
      "label": "Right side background (behind image / placeholder)",
      "default": "#e3e3e3"
    }
  ],
  "presets": [
    {
      "name": "Brand values split"
    }
  ]
}
{% endschema %}
